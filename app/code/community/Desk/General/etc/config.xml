<config>
  <modules>
    <Desk_General>
      <version>0.0.1</version>
    </Desk_General>
  </modules>
  <global>
    <models>
      <desk_general>
        <class>Desk_General_Model</class>
      </desk_general>
    </models>
    <blocks>
      <desk_general>
        <class>Desk_General_Block</class>
      </desk_general>
    </blocks>
    <helpers>
      <desk_general>
        <class>Desk_General_Helper</class>
      </desk_general>
    </helpers>
    <resources>
      <desk_general_setup>
        <setup>
          <module>Desk_General</module>
          <class>Desk_General_Model_Resource_Setup</class>
        </setup>
      </desk_general_setup>
    </resources>
    <events>
      <controller_action_layout_render_before_adminhtml_system_config_edit>
        <observers>
          <desk_general_add_button>
            <class>Desk_General_Model_Observer</class>
            <method>addSyncButton</method>
          </desk_general_add_button>
        </observers>
      </controller_action_layout_render_before_adminhtml_system_config_edit>
    </events>
  </global>
  <admin>
    <routers>
      <adminhtml>
        <args>
          <modules>
            <Desk_General after="Mage_Adminhtml">Desk_General</Desk_General>
          </modules>
        </args>
      </adminhtml>
    </routers>
  </admin>
  <adminhtml>
    <acl>
      <resources>
        <admin>
          <children>
            <system>
              <children>
                <config>
                  <children>
                    <desk translate="title">
                      <title>Desk.com</title>
                      <sort_order>50</sort_order>
                    </desk>
                  </children>
                </config>
              </children>
            </system>
          </children>
        </admin>
      </resources>
    </acl>
  </adminhtml>
</config>
