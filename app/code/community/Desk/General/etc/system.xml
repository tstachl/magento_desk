<config>
  <sections>
    <desk translate="label">
      <label>Desk.com</label>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <tab>customer</tab>
      <sort_order>5000</sort_order>
      <groups>
        <general translate="label comment">
          <label>Authorization</label>
          <comment>
            <![CDATA[
              Authorize Magento to interact with your desk.com instance. <strong>Important:</strong> Only validated if all values are set.
            ]]>
          </comment>
          <sort_order>100</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <endpoint translate="label tooltip">
              <label>Endpoint</label>
              <tooltip>This can either be "https://devel.desk.com" or "https://support.devel.com".</tooltip>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <frontend_type>text</frontend_type>
              <sort_order>100</sort_order>
              <validate>validate-url</validate>
            </endpoint>
            <consumer_key translate="label tooltip">
              <label>Consumer Key</label>
              <tooltip>Can be found in Admin -> Settings -> API -> My Applications.</tooltip>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <frontend_type>text</frontend_type>
              <sort_order>200</sort_order>
            </consumer_key>
            <consumer_secret translate="label tooltip">
              <label>Consumer Secret</label>
              <tooltip>Can be found in Admin -> Settings -> API -> My Applications.</tooltip>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <frontend_type>password</frontend_type>
              <sort_order>300</sort_order>
            </consumer_secret>
            <token translate="label tooltip">
              <label>Access Token</label>
              <tooltip>Can be found in Admin -> Settings -> API -> My Applications -> Your Access Token.</tooltip>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <frontend_type>text</frontend_type>
              <sort_order>400</sort_order>
            </token>
            <token_secret translate="label tooltip">
              <backend_model>desk_general/validation_token</backend_model>
              <label>Access Token Secret</label>
              <tooltip>Can be found in Admin -> Settings -> API -> My Applications -> Your Access Token.</tooltip>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <frontend_type>password</frontend_type>
              <sort_order>500</sort_order>
            </token_secret>
          </fields>
        </general>
      </groups>
    </desk>
  </sections>
</config>
